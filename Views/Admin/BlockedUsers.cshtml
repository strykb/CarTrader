@model List<User>

<h2>Zablokowani użytkownicy</h2>

@if (Model.Count == 0)
{
    <p>Brak zablokowanych użytkowników.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nazwa użytkownika</th>
                <th>Email</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a href="@Url.Action("UnblockUser", "Admin", new { userId = user.Id })">Odblokuj</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}